    <!-- Mozilla Firefox -->
<component context="User" type="Application">
    <displayName _locID="migsgadditional.firefox">Mozilla Firefox</displayName>
    <role role="Settings">
        <destinationCleanup>
            <objectSet>
                <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\cache2\* [*]</pattern>
            </objectSet>
        </destinationCleanup>
        <detection>
            <conditions>
                <condition>MigXmlHelper.DoesObjectExist("File","%CSIDL_APPDATA%\Mozilla\Firefox\Profiles")</condition>
            </conditions>
        </detection>
        <rules context="User">
            <include>
                <objectSet>
                    <!-- Include Firefox profile folder -->
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\* [*]</pattern>
                </objectSet>
            </include>
            <include>
                <objectSet>
                    <!-- Explicitly include bookmarks, settings, and logins -->
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\places.sqlite</pattern>
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\logins.json</pattern>
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\key4.db</pattern>
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\prefs.js</pattern>
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\profiles.ini</pattern>
                </objectSet>
            </include>
            <exclude>
                <objectSet>
                    <!-- Exclude cache files -->
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\cache2\* [*]</pattern>
                </objectSet>
            </exclude>
            <merge script="MigXmlHelper.SourcePriority()">
                <objectSet>
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\places.sqlite</pattern>
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\logins.json</pattern>
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\key4.db</pattern>
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\Profiles\*\prefs.js</pattern>
                    <pattern type="File">%CSIDL_APPDATA%\Mozilla\Firefox\profiles.ini</pattern>
                </objectSet>
            </merge>
        </rules>
    </role>
</component>


    <!-- This component migrates My Download files -->
    <component type="Documents" context="User">
        <displayName _locID="migsgadditional.mydownload">My Download</displayName>
        <paths>
            <path type="File">%CSIDL_PROFILE%\Downloads</path>
        </paths>
        <role role="Data">
            <detects>
                <detect>
                    <condition>MigXmlHelper.DoesObjectExist("File","%CSIDL_PROFILE%\Downloads")</condition>
                </detect>
            </detects>
            <rules>
                <include filter='MigXmlHelper.IgnoreIrrelevantLinks()'>
                    <objectSet>
                        <pattern type="File">%CSIDL_PROFILE%\Downloads\* [*]</pattern>
                    </objectSet>
                </include>
                <merge script="MigXmlHelper.DestinationPriority()">
                    <objectSet>
                        <pattern type="File">%CSIDL_PROFILE%\Downloads [desktop.ini]</pattern>
                    </objectSet>
                </merge>
            </rules>
        </role>
    </component>

</migration>
